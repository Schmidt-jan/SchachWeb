# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /                           controllers.GameController.tuiGame(cmd: String ?= "")
GET     /tui                        controllers.GameController.tuiGame(cmd = "")
POST    /tui/cmd                    controllers.GameController.tuiGame(cmd: String)
GET     /tui/new                    controllers.GameController.gameNew
POST    /tui/move                   controllers.GameController.figureMove(from: String, to: String)
GET     /tui/undo                   controllers.GameController.gameUndo
GET     /tui/redo                   controllers.GameController.gameRedo
GET     /tui/save                   controllers.GameController.gameSaveToFile
POST    /tui/load                   controllers.GameController.gameLoadFromFile
PUT     /tui/convertPawn            controllers.GameController.convertPawn(toFigure: String)

GET     /rules                      controllers.GameController.rules
GET     /instructions               controllers.GameController.instructions

POST    /api/new                        controllers.GameControllerJson.gameNew
GET     /api/status                     controllers.GameControllerJson.status
POST    /api/move                       controllers.GameControllerJson.figureMove
POST    /api/undo                       controllers.GameControllerJson.gameUndo
POST    /api/redo                       controllers.GameControllerJson.gameRedo
POST    /api/convertPawn                controllers.GameControllerJson.convertPawn(toFigure: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /stylesheets/*file          controllers.Assets.at(path="/public/stylesheets", file)